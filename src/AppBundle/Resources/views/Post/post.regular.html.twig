{% extends 'AppBundle:Post:post.html.twig' %}

{% block form_content %}
    {{ form_errors(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.content) }}

    <div class="tags-container" data-prototype="{% filter escape %}
                {% include '@App/tag-prototype.html.twig' with {tagForm: form.tags.vars.prototype} only %}
            {% endfilter %}">

        {% for tagForm in form.tags %}
            {% include '@App/tag-prototype.html.twig' with {tagForm: tagForm} only %}
        {% endfor %}
    </div>

    {{ form_errors(form.tags) }}

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <a href="#" class="btn btn-default btn-sm action-add-tag" data-target=".tags-container" data-max="3">Add tag</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset("js/app-min.js") }}"></script>
{% endblock %}
